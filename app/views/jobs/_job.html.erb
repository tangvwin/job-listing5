<div class="col-sm-6 col-md-4">
<div class="col-md-4 page foldtl">


  <div class="row text-center">
      <h3 ><%= link_to(job.title,job_path(job)) %></h3>
      <h4>
					<i class="fa fa-money" aria-hidden="true"></i> <%= job.wage_lower_bound  %> ~ <%= job.wage_upper_bound  %>
					</h4>
          <h4>
					<i class="fa fa-location-arrow" aria-hidden="true"></i>
					<%= job.location  %>
					</h4>
          <h4>
					<i class="fa fa-building" aria-hidden="true"></i>
					<%= job.company  %>
					</h4>
          					<h4><i class="fa fa-clock-o" aria-hidden="true"></i>	<%= job.created_at.strftime("%d %b. %Y")  %> </h4>
                 <p ><%= link_to("Contact Me",jobs_path, :method => :get, :class => "btn btn-danger"%>
                 </p>
                 <% end %>

  </div>
  <div class="row">
      <span class="salePercentage" style="margin-top: -10px">Call</span>
      <span class="saleOff" style="margin-top: -10px">Me</span>
  </div>


</div>

</div>
